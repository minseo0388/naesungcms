generator client {
  provider = "prisma-client-js"
  // Conditional preview features based on provider
  // fullTextSearch and fullTextIndex only work with MySQL
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql" // Primary database provider
  url      = env("DATABASE_URL")
  // Note: For SQLite, change provider to "sqlite" and update DATABASE_URL
  // SQLite features like fullTextSearch/fullTextIndex are not available
}

// NextAuth User
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("USER") // USER, ADMIN
  accounts      Account[]
  sessions      Session[]
  // 2FA
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String? // Encrypted secret

  // Custom Relations
  blogs         Blog[]    @relation("UserBlogs")
  posts         Post[]    @relation("UserPosts")

  // Phase 4 Extensions
  comments      Comment[]
  auditLogs     AuditLog[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Tenant System
model Blog {
  id          String   @id @default(cuid())
    name        String
    subdomain   String   @unique // e.g. "myblog" -> myblog.domain.com
    customDomain String? @unique // e.g. "www.myblog.com"
    description String?  @db.Text
    themeConfig String?  @db.Text // JSON: { primaryColor, layout }
    navMenu     String?  @db.Text // JSON: Navigation Menu structure
    dailyStats  DailyStat[]
    
    ownerId     String
    owner       User     @relation("UserBlogs", fields: [ownerId], references: [id], onDelete: Cascade)
  
    posts       Post[]
    pages       Page[]
    tags        Tag[]
    categories  Category[]
  
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
  
    @@index([ownerId])
  }
  
  model Post {
    id        String   @id @default(cuid())
    title     String
    slug      String   // URL friendly title
    content   String   @db.LongText
    published Boolean  @default(false)
    image     String?
  
    // SEO
    metaDescription String? @db.Text
    canonicalUrl    String?
    ogImage         String?

    blogId    String
    blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)
  
    authorId  String
    author    User     @relation("UserPosts", fields: [authorId], references: [id], onDelete: Cascade)

    categoryId String?
    category   Category? @relation(fields: [categoryId], references: [id])
    tags       Tag[]
  
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
  
    @@unique([blogId, slug]) // Slugs must be unique per blog
    @@index([blogId])
    @@index([authorId])
    @@index([categoryId])
  
    // Phase 4.5 Engagement
    viewCount Int       @default(0)
    comments  Comment[]
    revisions PostRevision[]
  
    @@fulltext([title, content])
  }

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  postId    String
  userId    String
  createdAt DateTime @default(now())
  
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([postId])
  @@index([userId])
}

model Tag {
  id        String   @id @default(cuid())
  name      String
  slug      String
  blogId    String
  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)
  posts     Post[]

  @@unique([blogId, slug])
  @@index([blogId])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  slug      String
  description String? @db.Text
  blogId    String
  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)
  posts     Post[]

  parentId  String?
  parent    Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryHierarchy")

  @@unique([blogId, slug])
  @@index([blogId])
  @@index([parentId])
}

model Page {
  id        String   @id @default(cuid())
  title     String
  slug      String
  content   String   @db.LongText
  published Boolean  @default(false)
  
  // SEO
  metaDescription String? @db.Text
  ogImage         String?

  blogId    String
  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([blogId, slug])
  @@index([blogId])
}

// Phase 4.3 Security
model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // CREATE, UPDATE, DELETE
  resource  String   // Post, Blog, Settings
  details   String?  @db.Text
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model RateLimit {
  id        String   @id @default(cuid())
  key       String   @unique // IP or UserID
  count     Int      @default(0)
  expiresAt DateTime
  
  @@index([key])
}

// Phase 7: Analytics
model DailyStat {
  id        String   @id @default(cuid())
  date      String   // YYYY-MM-DD
  views     Int      @default(0)
  
  blogId    String
  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)

  @@unique([blogId, date])
  @@index([blogId])
}

model PostRevision {
    id        String   @id @default(cuid())
    postId    String
    post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
    title     String
    content   String   @db.LongText
    createdAt DateTime @default(now())

    @@index([postId])
}
